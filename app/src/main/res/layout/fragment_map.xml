<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_blue"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@color/black_neutral">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_sans"
            android:text="Help me clean the world"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_sans"
            android:text="590 Cach Mang Thang 8 St., District 3, HCMC"
            android:textColor="@color/white_50"
            android:maxWidth="280dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_car"
                android:tint="@color/black_neutral"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nunito_sans"
                android:text="2 mins"
                android:gravity="bottom"
                android:textColor="@color/white_50"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="@id/imageView"
                app:layout_constraintBottom_toBottomOf="@id/imageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collections"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/nunito_sans"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:scrollbars="none"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp">

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="220dp"
                        android:layout_height="120dp"
                        android:src="@drawable/test"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="20dp">

                    <androidx.constraintlayout.utils.widget.ImageFilterView
                        android:layout_width="220dp"
                        android:layout_height="120dp"
                        android:src="@drawable/test"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/light_blue"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="10dp"
                            android:tint="@color/dark_blue"
                            android:src="@drawable/ic_direction" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Direction"
                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/dark_blue_70"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:tint="@color/white_50"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_airplane" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Start"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/dark_blue_70"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:tint="@color/white"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_align_left" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Detail"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/dark_blue_70"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:tint="@color/white"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_report" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Report"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/nunito_sans"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </HorizontalScrollView>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>