<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/setting_txt_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/dark_blue"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/setting_txt_sound_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound &amp; Notification"
        android:textSize="25sp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/setting_txt_setting_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/setting_btn_sound_always_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_txt_sound_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/setting_btn_sound_only_alerts"
        android:layout_marginTop="15dp"
        android:clickable="true"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            android:textColor="@color/white"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Always Off"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/setting_btn_sound_only_alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_txt_sound_title"
        app:layout_constraintLeft_toRightOf="@id/setting_btn_sound_always_off"
        app:layout_constraintRight_toLeftOf="@id/setting_btn_sound_always_on"
        android:layout_marginTop="15dp"
        android:clickable="true"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle"
            android:textColor="@color/dark_blue"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Only Alerts"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/setting_btn_sound_always_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_txt_sound_title"
        app:layout_constraintLeft_toRightOf="@id/setting_btn_sound_only_alerts"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:clickable="true"
        app:cardCornerRadius="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle"
            android:textColor="@color/dark_blue"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Always On"/>
    </androidx.cardview.widget.CardView>

    <Switch
        android:id="@+id/setting_switch_push_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_btn_sound_always_on"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:textSize="18sp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:alpha="0.6"
        android:text="Push Notification"/>

    <View
        android:id="@+id/setting_divider_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/setting_switch_push_noti"
        android:layout_marginTop="30dp"
        android:alpha="0.6" />

    <TextView
        android:id="@+id/setting_txt_metric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_divider_1"
        android:textColor="@color/dark_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text="Metric"/>

    <TextView
        android:id="@+id/setting_txt_distance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance Unit"
        app:layout_constraintTop_toBottomOf="@id/setting_txt_metric"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:alpha="0.6"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/setting_spinner_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="@+id/setting_txt_distance_title"/>

    <TextView
        android:id="@+id/setting_txt_map_zoom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Zoom"
        app:layout_constraintTop_toBottomOf="@id/setting_spinner_distance"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:alpha="0.6"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/setting_spinner_map_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="@+id/setting_txt_map_zoom_title"/>

    <View
        android:id="@+id/setting_divider_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/setting_spinner_map_zoom"
        android:layout_marginTop="30dp"
        android:alpha="0.6" />

    <TextView
        android:id="@+id/setting_txt_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Account Center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/setting_divider_2"/>


</androidx.constraintlayout.widget.ConstraintLayout>
