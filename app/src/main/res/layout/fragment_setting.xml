<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/setting_txt_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_marginTop="30dp"
            android:textColor="@color/dark_blue"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/setting_txt_sound_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sound_amp_notification"
            android:textSize="25sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/setting_txt_setting_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="25dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/setting_btn_sound_always_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_txt_sound_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/setting_btn_sound_only_alerts"
            android:layout_marginTop="15dp"
            android:clickable="true"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dark_blue"
                android:textColor="@color/white"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/always_off"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/setting_btn_sound_only_alerts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_txt_sound_title"
            app:layout_constraintLeft_toRightOf="@id/setting_btn_sound_always_off"
            app:layout_constraintRight_toLeftOf="@id/setting_btn_sound_always_on"
            android:layout_marginTop="15dp"
            android:clickable="true"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:textColor="@color/dark_blue"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/only_alerts"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/setting_btn_sound_always_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_txt_sound_title"
            app:layout_constraintLeft_toRightOf="@id/setting_btn_sound_only_alerts"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:clickable="true"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:textColor="@color/dark_blue"
                android:padding="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/always_on"/>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/setting_switch_push_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_btn_sound_always_on"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:checked="true"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:alpha="0.6"
            android:text="@string/push_notification"/>

        <View
            android:id="@+id/setting_divider_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/setting_switch_push_noti"
            android:layout_marginTop="20dp"
            android:alpha="0.6" />

        <TextView
            android:id="@+id/setting_txt_metric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_divider_1"
            android:textColor="@color/dark_blue"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:text="@string/metric"/>

        <TextView
            android:id="@+id/setting_txt_distance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/distance_unit"
            app:layout_constraintTop_toBottomOf="@id/setting_txt_metric"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:alpha="0.6"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/setting_spinner_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="10dp"
            android:alpha="0.6"
            app:layout_constraintTop_toTopOf="@+id/setting_txt_distance_title"/>

        <TextView
            android:id="@+id/setting_txt_map_zoom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map_zoom"
            app:layout_constraintTop_toBottomOf="@id/setting_spinner_distance"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:alpha="0.6"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/setting_spinner_map_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="10dp"
            android:alpha="0.6"
            app:layout_constraintTop_toTopOf="@+id/setting_txt_map_zoom_title"/>

        <View
            android:id="@+id/setting_divider_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/setting_spinner_map_zoom"
            android:layout_marginTop="30dp"
            android:alpha="0.6" />

        <TextView
            android:id="@+id/setting_txt_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/account_center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/setting_divider_2"/>


        <TextView
            android:id="@+id/setting_txt_account_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            app:layout_constraintTop_toBottomOf="@id/setting_txt_account_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:alpha="0.6"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/setting_edt_account_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/setting_txt_account_username"
            android:hint="@string/huuquoc7603_gmail_com"
            android:background="@android:color/transparent"
            android:textStyle="italic"
            android:layout_marginEnd="10dp"
            android:maxWidth="150dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textDirection="ltr"/>

        <TextView
            android:id="@+id/setting_txt_account_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            app:layout_constraintTop_toBottomOf="@id/setting_txt_account_username"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:alpha="0.6"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/auth_edt_pwd_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/abcxyzabcxyzabcxyz"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/setting_txt_account_pwd"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@android:color/transparent"
            android:layout_marginEnd="10dp"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/setting_txt_account_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            app:layout_constraintTop_toBottomOf="@id/auth_edt_pwd_input"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:alpha="0.6"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/setting_edt_account_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/setting_txt_account_phone"
            android:hint="@string/_84_083_875_6241"
            android:background="@android:color/transparent"
            android:textStyle="italic"
            android:layout_marginEnd="10dp"
            android:maxWidth="180dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textDirection="ltr"/>

        <View
            android:id="@+id/setting_divider_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/setting_edt_account_phone"
            android:layout_marginTop="30dp"
            android:alpha="0.6" />

        <androidx.cardview.widget.CardView
            android:id="@+id/setting_card_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_divider_3"
            android:layout_marginTop="40dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/setting_btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/confirm"
                android:background="@drawable/rounded_rectangle"
                android:textSize="18sp"
                android:textColor="@color/dark_blue"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/red"
            android:text="@string/log_out"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:alpha="0.8"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/setting_card_btn_confirm"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
