<!-- item_dashboard_table_event.xml -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp"
    android:backgroundTint="@color/gray_50"
    android:layout_weight="1"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/all_event_img"
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="140dp">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/item_event_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/quoc_ava" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_all_event_title"
            app:layout_constraintTop_toBottomOf="@id/all_event_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:maxWidth="120dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Hello Worldaaaaaaaaaaaaaaaaaaaaaadsfasdaaaaaaaaaaaaaaaaaaaaa"
            android:maxLines="1"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_sans"
            android:textStyle="bold"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/item_all_event_host_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Host"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/nunito_sans"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/item_all_event_title"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/item_all_event_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doan Huu Quoc"
            app:layout_constraintTop_toBottomOf="@id/item_all_event_host_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_gravity="bottom"
            android:textSize="16sp"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/nunito_sans"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/item_all_event_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_all_event_host_title"
            app:layout_constraintBottom_toBottomOf="@id/item_all_event_host_title"
            android:text="Type"
            android:textSize="14sp"
            android:fontFamily="@font/nunito_sans"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/item_all_event_category_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Park"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_all_event_category_title"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_sans" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
