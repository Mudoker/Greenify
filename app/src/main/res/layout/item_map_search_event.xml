<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_map_search_event_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:shapeAppearanceOverlay="@style/circularImageViewShape"
        android:src="@drawable/test"
        android:padding="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_map_search_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"
        app:layout_constraintLeft_toRightOf="@id/item_map_search_event_img"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/nunito_sans"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/item_map_search_event_address"
        app:layout_constraintTop_toTopOf="@id/item_map_search_event_img" />

    <TextView
        android:id="@+id/item_map_search_event_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="590/15 cach mang thang 8"
        app:layout_constraintLeft_toRightOf="@id/item_map_search_event_img"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_sans"
        android:textColor="@color/gray"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@id/item_map_search_event_img"
        app:layout_constraintTop_toBottomOf="@id/item_map_search_event_title" />
</androidx.constraintlayout.widget.ConstraintLayout>